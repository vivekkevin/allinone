<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Chat Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #E5DDD5;
        }

        .app-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .header {
            background-color: #075E54;
            color: white;
            padding: 15px;
            text-align: left;
        }

        .chat-container {
            display: flex;
            flex: 1;
            background-color: #fff;
            height: calc(100vh - 60px);
        }

        /* Left sidebar styles */
        .chat-collection {
            width: 30%;
            background-color: #fff;
            border-right: 1px solid #e0e0e0;
            overflow-y: auto;
        }

        .chat-item {
            display: flex;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .chat-item:hover {
            background-color: #f5f5f5;
        }

        .chat-item.active {
            background-color: #ebebeb;
        }

        .avatar {
            width: 45px;
            height: 45px;
            background-color: #128C7E;
            border-radius: 50%;
            margin-right: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }

        .chat-info {
            flex: 1;
        }

        .chat-name {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .chat-preview {
            font-size: 0.9em;
            color: #667781;
        }

        /* Right content area styles */
        .chat-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-color: #F0F0F0;
        }

        .chat-header {
            background-color: #F0F0F0;
            padding: 15px;
            border-bottom: 1px solid #e0e0e0;
        }

        .user-info {
            margin-bottom: 10px;
        }

        .user-info .name {
            font-weight: 600;
            font-size: 1.1em;
            margin-bottom: 5px;
        }

        .user-info .details {
            font-size: 0.9em;
            color: #667781;
        }

        .messages-container {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background-color: #E5DDD5;
        }

        .message-list {
            list-style: none;
        }

        .message-item {
            margin: 5px 0;
            padding: 2px 5px;
            border-radius: 15px;
            max-width: 20%;
            word-wrap: break-word;
        }

        .message-item.received {
            background-color: #fff; /* White for received messages */
            margin-left: auto; /* Align to the right */
            
        }

        .message-item.sent {
            background-color: #DCF8C6; /* Green for sent messages */
            margin-right: auto; /* Align to the left */
        }

        .message-content {
            padding: 10px 15px;
            border-radius: 7.5px;
            position: relative;
        }

        .message-item.received .message-content {
            background-color: #fff;
        }

        .message-item.sent .message-content {
            background-color: #DCF8C6;
        }

        .message-time {
            font-size: 0.7rem;
            color: #666;
            text-align: right;
            margin-top: 2px;
        }

        .reply-form {
            padding: 15px;
            background-color: #F0F0F0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .reply-input {
            flex: 1;
            padding: 12px;
            border: none;
            border-radius: 8px;
            outline: none;
            font-size: 0.95em;
        }

        .send-button {
            background-color: #075E54;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
        }

        .send-button:hover {
            background-color: #128C7E;
        }

        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        .no-chats, .no-chat-selected {
            padding: 20px;
            text-align: center;
            color: #667781;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <header class="header">
            <h1>WhatsApp Chat Dashboard</h1>
        </header>

        <div class="chat-container">
            <!-- Chat Collection Section -->
            <div class="chat-collection">
                <% if (chatCollection && chatCollection.length > 0) { %>
                    <% chatCollection.forEach(chat => { %>
                        <div class="chat-item" 
                             onclick="showChat('<%= chat.id %>')"
                             id="chat-<%= chat.id %>">
                            <div class="avatar">
                                <%= chat.name.charAt(0) %>
                            </div>
                            <div class="chat-info">
                                <div class="chat-name"><%= chat.name %></div>
                                <div class="chat-preview">
                                    <%= chat.messages[chat.messages.length - 1]?.message || 'No messages' %>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="no-chats">No chats available.</div>
                <% } %>
            </div>

            <!-- Chat Content Section -->
            <div class="chat-content">
                <% if (chatCollection && chatCollection.length > 0) { 
                    const defaultChat = chatCollection[0]; 
                %>
                    <div class="chat-header">
                        <div class="user-info">
                            <div class="name" id="chatName"><%= defaultChat.name %></div>
                            <div class="details">
                                <div id="chatEmail">Email: <%= defaultChat.email %></div>
                                <div id="chatPlatform">Platform: <%= defaultChat.platform %></div>
                            </div>
                        </div>
                    </div>

                    <div class="messages-container">
                        <div class="message-list clearfix" id="messageList">
                            <% defaultChat.messages.forEach(message => { %>
                                <div class="message-item <%= message.sender === 'user' ? 'sent' : 'received' %>">
                                    <div class="message-content">
                                        <%= message.message %>
                                        <div class="message-time">
                                            <%= new Date(message.timestamp).toLocaleTimeString([], {
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <form class="reply-form" action="/chat/reply" method="POST">
                        <input type="hidden" name="email" id="replyEmail" value="<%= defaultChat.email %>">
                        <input type="text" 
                               name="replyMessage" 
                               class="reply-input" 
                               placeholder="Type a message" 
                               required>
                        <button type="submit" class="send-button">Send</button>
                    </form>
                <% } else { %>
                    <div class="no-chat-selected">
                        <p>No chats available to display.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        const chatCollection = <%- JSON.stringify(chatCollection || []) %>;

        function showChat(chatId) {
            // Remove active class from all chat items
            document.querySelectorAll('.chat-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Add active class to selected chat
            document.getElementById(`chat-${chatId}`).classList.add('active');

            // Find the selected chat
            const selectedChat = chatCollection.find(chat => chat.id === chatId);

            if (selectedChat) {
                // Update chat header details
                document.getElementById('chatName').innerText = selectedChat.name;
                document.getElementById('chatEmail').innerText = `Email: ${selectedChat.email}`;
                document.getElementById('chatPlatform').innerText = `Platform: ${selectedChat.platform}`;

                // Update messages
                const messageList = document.getElementById('messageList');
                messageList.innerHTML = '';

                selectedChat.messages.forEach(message => {
                    const messageDiv = document.createElement('div');
                    messageDiv.className = `message-item ${message.sender === 'Me' ? 'sent' : 'received'}`;
                    
                    messageDiv.innerHTML = `
                        <div class="message-content">
                            ${message.message}
                            <div class="message-time">
                                ${new Date(message.timestamp).toLocaleTimeString([], {
                                    hour: '2-digit',
                                    minute: '2-digit'
                                })}
                            </div>
                        </div>
                    `;
                    
                    messageList.appendChild(messageDiv);
                });

                // Scroll to latest message
                messageList.scrollTop = messageList.scrollHeight;

                // Update reply form email
                document.getElementById('replyEmail').value = selectedChat.email;
            }
        }

