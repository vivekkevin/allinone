    <div class="container-fluid py-4">
      <div class="row">
        <!-- New Prospect Form -->
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header pb-1">
              <h6 class="mb-0">New Prospect</h6>
            </div>
            <div class="card-body p-2">
              <form id="prospectForm" method="POST" action="/sales/prospects">
                <!-- Basic Prospect Information -->
                <h6 class="fs-6">1. Basic Prospect Information</h6>
                <div class="row g-2">
                  <div class="col-md-2">
                    <label for="name" class="form-label small">Name</label>
                    <input type="text" id="name" name="name" class="form-control form-control-sm" required>
                  </div>
                  <div class="col-md-2">
                    <label for="phone" class="form-label small">Phone Number</label>
                    <input type="text" id="phone" name="phone" class="form-control form-control-sm" required>
                  </div>
                  <div class="col-md-2">
                    <label for="email" class="form-label small">Email Address</label>
                    <input type="email" id="email" name="email" class="form-control form-control-sm" required>
                  </div>
                  <div class="col-md-2">
                    <label for="company" class="form-label small">Company Name</label>
                    <input type="text" id="company" name="company" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="industry" class="form-label small">Industry</label>
                    <input type="text" id="industry" name="industry" class="form-control form-control-sm" required>
                  </div>
                  <div class="col-md-2">
                    <label for="address" class="form-label small">Address</label>
                    <input type="text" id="address" name="address" class="form-control form-control-sm">
                  </div>
                </div>
  
                <!-- Prospect Demographics -->
                <h6 class="mt-3 fs-6">2. Prospect Demographics</h6>
                <div class="row g-2">
                  <div class="col-md-2">
                    <label for="role" class="form-label small">Position/Role</label>
                    <input type="text" id="role" name="role" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="location" class="form-label small">Geographic Location</label>
                    <input type="text" id="location" name="location" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="companySize" class="form-label small">Company Size (Employees)</label>
                    <input type="number" id="companySize" name="companySize" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="annualRevenue" class="form-label small">Annual Revenue</label>
                    <input type="number" id="annualRevenue" name="annualRevenue" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="website" class="form-label small">Website</label>
                    <input type="url" id="website" name="website" class="form-control form-control-sm">
                  </div>
                </div>
  
                <!-- Sales-Specific Details -->
                <h6 class="mt-3 fs-6">3. Sales-Specific Details</h6>
                <div class="row g-2">
                  <div class="col-md-2">
                    <label for="status" class="form-label small">Status</label>
                    <select id="status" name="status" class="form-control form-control-sm">
                      <option value="New">New</option>
                      <option value="In Progress">In Progress</option>
                      <option value="Closed">Closed</option>
                    </select>
                  </div>
                  <div class="col-md-2">
                    <label for="priority" class="form-label small">Priority</label>
                    <select id="priority" name="priority" class="form-control form-control-sm">
                      <option value="High">High</option>
                      <option value="Medium">Medium</option>
                      <option value="Low">Low</option>
                    </select>
                  </div>
                  <div class="col-md-2">
                    <label for="dealSize" class="form-label small">Deal Size</label>
                    <input type="number" id="dealSize" name="dealSize" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="salesStage" class="form-label small">Sales Stage</label>
                    <input type="text" id="salesStage" name="salesStage" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-2">
                    <label for="probabilityOfClose" class="form-label small">Probability of Close (%)</label>
                    <input type="number" id="probabilityOfClose" name="probabilityOfClose" class="form-control form-control-sm">
                  </div>
                </div>
                  <!-- Communication and Engagement -->
                <h6 class="mt-3 fs-6">4. Communication and Engagement</h6>
                <div class="row g-2">
                  <div class="col-md-4">
                    <label for="communicationChannel" class="form-label small">Preferred Communication Channel</label>
                    <input type="text" id="communicationChannel" name="communicationChannel" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-4">
                    <label for="lastContactDate" class="form-label small">Last Contact Date</label>
                    <input type="date" id="lastContactDate" name="lastContactDate" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-4">
                    <label for="notes" class="form-label small">Notes from Previous Conversations</label>
                    <textarea id="notes" name="notes" class="form-control form-control-sm" rows="2"></textarea>
                  </div>
                </div>

                <!-- Activity History -->
                <h6 class="mt-3 fs-6">5. Activity History</h6>
                <div class="row g-2">
                  <div class="col-md-4">
                    <label for="activityType" class="form-label small">Activity Type</label>
                    <input type="text" id="activityType" name="activityHistory[0][type]" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-4">
                    <label for="activityDate" class="form-label small">Date</label>
                    <input type="date" id="activityDate" name="activityHistory[0][date]" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-4">
                    <label for="activityDescription" class="form-label small">Description</label>
                    <textarea id="activityDescription" name="activityHistory[0][description]" class="form-control form-control-sm" rows="2"></textarea>
                  </div>
                </div>

                <!-- Next Steps -->
                <h6 class="mt-3 fs-6">6. Next Steps</h6>
                <div class="row g-2">
                  <div class="col-md-4">
                    <label for="task" class="form-label small">Task</label>
                    <input type="text" id="task" name="nextSteps[0][task]" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-4">
                    <label for="dueDate" class="form-label small">Due Date</label>
                    <input type="date" id="dueDate" name="nextSteps[0][dueDate]" class="form-control form-control-sm">
                  </div>
                  <div class="col-md-4">
                    <label for="responsiblePerson" class="form-label small">Responsible Person</label>
                    <input type="text" id="responsiblePerson" name="nextSteps[0][responsiblePerson]" class="form-control form-control-sm">
                  </div>
                </div>


                
                <!-- Submit Button -->
                <div class="d-flex justify-content-end me-2 gap-2">
                  <button type="submit" class="btn btn-primary btn-sm">Save Prospect</button>
                </div>
              </form>
            </div>
          </div>
        </div>
